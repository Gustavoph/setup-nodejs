{
  "name": "setup-nodejs",
  "version": "0.0.1",
  "description": "setup for application with nodejs",
  "main": "server.ts",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "test": "jest --passWithNoTests --runInBand --no-cache",
    "test:unit": "npm test -- --watch -c jest.unit.config.ts",
    "test:integration": "npm test -- --watch -c jest.integration.config.ts",
    "test:staged": "npm test -- --findRelatedTests",
    "test:ci": "npm test -- --coverage",
    "lint-staged": "lint-staged",
    "lint:fix": "eslint src __test__ --fix --ext .js,.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Gustavoph/setup-nodejs.git"
  },
  "keywords": [
    "nodejs",
    "fastify",
    "typescript",
    "docker"
  ],
  "author": "Gustavo Oliveira <gusta.coliveira07@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Gustavoph/setup-nodejs/issues"
  },
  "homepage": "https://github.com/Gustavoph/setup-nodejs#readme",
  "lint-staged": {
    "*.ts": [
      "npm run lint:fix",
      "npm run test:staged"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.6",
    "@commitlint/config-conventional": "^17.6.6",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.2",
    "@types/supertest": "^2.0.12",
    "husky": "^8.0.3",
    "jest": "^29.6.1",
    "lint-staged": "^13.2.3",
    "prisma": "^5.0.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "tsx": "^3.12.7",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@prisma/client": "^5.0.0",
    "eslint-config-standard-with-typescript": "^36.0.1",
    "fastify": "^4.19.2",
    "ts-node": "^10.9.1"
  }
}
